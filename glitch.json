{
  "install": "npm install",
  "start": "npm run start",
  "watch": {
    "ignore": [
      "\\.git",
      "node_modules/**/node_modules"
    ],
    "install": {
      "include": [
        "^package\\.json$",
        "^\\.env$"
      ]
    },
    "restart": {
      "include": [
        "^src/",
        "^config/"
      ]
    },
    "throttle": 1000
  }
}
